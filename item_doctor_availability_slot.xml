<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/rounded_corner_bg">

    <TextView
        android:id="@+id/timeSlotTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10:00-10:30"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/slotTypeTextView"
        app:layout_constraintEnd_toStartOf="@+id/buttonRemoveSlot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slotTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="In-clinic"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonRemoveSlot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeSlotTextView" />

    <Button
        android:id="@+id/buttonRemoveSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:textSize="12sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@android:color/darker_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>