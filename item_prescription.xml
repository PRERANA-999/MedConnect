<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPrescriptionDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Dr. John Doe"/>

        <TextView
            android:id="@+id/tvPrescriptionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:text="Date: 2024-05-30"/>

        <TextView
            android:id="@+id/tvPrescriptionDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp"
            android:text="Diagnosis: Flu"/>

        <TextView
            android:id="@+id/tvPrescriptionMedications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp"
            android:text="Medications:\n- Paracetamol (1-0-1)\n- Cough Syrup (5ml twice a day)"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewAttachment"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="View Prescription"
            android:textColor="@color/colorPrimary"
            app:icon="@drawable/ic_file_download" app:iconTint="@color/colorPrimary"
            app:iconGravity="textStart"
            android:visibility="gone" /> </LinearLayout>

</com.google.android.material.card.MaterialCardView>